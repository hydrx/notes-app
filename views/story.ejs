<%- include('partials/header') -%>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-6">
            <h2><%= story.title %></h2>
            <div class="row justify-content-between">
                <form
                        action="/story/deleteStory/<%= story.id %>?_method=DELETE"
                        method="POST"
                        class="col-3"
                >
                    <button class="btn btn-primary fa fa-trash" type="submit"></button>
                </form>
            </div>
        </div>

        <h2>Entries</h2>
        <!-- Show Entries -->
        <ul id="entries">
            <% for(var i=0; i<entries.length; i++) {%>
                <li class="col-6 justify-content-between mt-5 entry">
                    <p class="entry--content"><%= entries[i].entry%></p>
                    <section class="options">
                        <span class="timeStamp"><%= entries[i].createdAt.toLocaleString() %></span>
                        <form action="/entry/deleteEntry/<%= entries[i]._id %>?_method=DELETE" method="POST" class="col-3">
                            <button class="btn btn-primary fa fa-trash" type="submit"></button>
                        </form>
                    </section>
                </li>
            <% } %>
        </ul>

        <!-- Add Entry -->
       <!-- <div class="col-6 mt-5">
            <form action="/entry/createEntry/<%=story.id%>" method="POST">
                <div class="mb-3">
                    <label for="entry" class="form-label">Add Entry</label>
                    <input type="text" class="form-control" id="entry" name="entry">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>-->

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#entryModal">
            Add entry
        </button>
        <!-- Modal -->
        <form action="/entry/createEntry/<%=story.id%>" method="POST" class="modal fade" id="entryModal" tabindex="-1" aria-labelledby="entryModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="entryModalLabel">Add Entry</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <label for="entry" class="form-label">Add Entry</label>
                        <input type="text" class="form-control" id="entry" name="entry">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer') -%>