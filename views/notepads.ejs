<%- include('partials/header') -%>

<!-- use daisyui sidebar for desktop, drawer for mobile -->
<div class="drawer drawer-mobile">
    <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
    <div class="drawer-content flex flex-col items-center justify-center">
        <!-- Page content here -->
        <div class="container mx-auto">
            <ul>
                <% for(var i=0; i<notepads.length; i++) {%>
                    <li>
                        <a href="/notepad/<%= notepads[i]._id%>">
                            <%= notepads[i].title%>
                        </a>
                    </li>
                <% } %>
            </ul>
        </div>
        <label for="my-drawer-2" class="btn btn-primary drawer-button lg:hidden">Open drawer</label>

    </div>
    <div class="drawer-side">
        <label for="my-drawer-2" class="drawer-overlay"></label>
        <div class="menu p-4 w-80 bg-base-100 text-base-content">
            <!-- Sidebar content here -->
            <div id="user">
                <p><strong>User Name</strong>: <%= user.userName %></p>
                <p><strong>Email</strong>: <%= user.email %></p>
                <a href="/logout" class="col-3 btn btn-primary">Logout</a>
            </div>

            <div id="create-note">
                <h2>Create a notepad</h2>
                <form action="/notepad/createNotepad" method="POST">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>

    </div>
</div>

<%- include('partials/footer') -%>